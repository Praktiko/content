		<ProblemTemplate id="#000460 Osztás kétszámjegyű osztóval példa">
			<Guid>cc64d7a1-a523-4302-a368-6143713f2bd9</Guid>
			<Tags>
				<string>subject-mathematics</string>
				<string>zsenileszek</string>
			</Tags>
			<Variables>
				<Variable>
					<Name>{a}</Name>
					<MinValue>1000</MinValue>
					<MaxValue>9999</MaxValue>
					<ValueStep>73</ValueStep>
				</Variable>
				<Variable>
					<Name>{b}</Name>
					<MinValue>10</MinValue>
					<MaxValue>99</MaxValue>
					<ValueStep>3</ValueStep>
				</Variable>
				<Variable>
					<Name>{div}</Name>
					<ValueCalculation type="C#">var div = Math.Floor({a} / {b}); return div;</ValueCalculation>
				</Variable>
				<Variable>
					<Name>{mod}</Name>
					<ValueCalculation type="C#">var mod = {a} % {b}; return mod;</ValueCalculation>
				</Variable>
			</Variables>
			<VariableValidator/>
			<TextSnippets/>
			<Question>
				<LocalizedText>
					<Culture>hu-HU</Culture>
					<Text>Hányszor van meg {a}ban a {b}, és mennyi a maradék?</Text>
				</LocalizedText>
			</Question>
			<Solution>
				<SolutionStep>
					<Presentation>
						<LocalizedText>
							<Culture>hu-HU</Culture>
							<Text>{div.ToString("0")}szor és {mod.ToString("0")} a maradék</Text>
						</LocalizedText>
						<LocalizedText>
							<Text>{div.ToString("0")} {mod.ToString("0")} </Text>
						</LocalizedText>
					</Presentation>
				</SolutionStep>
			</Solution>
		</ProblemTemplate>
		<ProblemTemplate id="#011250 Kerület és terület alapok (téglalap és négyzet)">
			<Guid>17b79eb4-d6ef-4601-8f26-544616c77456</Guid>
			<Tags>
				<string>subject-mathematics</string>
				<string>zsenileszek</string>
			</Tags>
			<Variables>
				<Variable>
					<Name>{a}</Name>
					<MinValue>2</MinValue>
					<MaxValue>99</MaxValue>
					<ValueStep>1</ValueStep>
				</Variable>
				<Variable>
					<Name>{b}</Name>
					<MinValue>2</MinValue>
					<MaxValue>99</MaxValue>
					<ValueStep>1</ValueStep>
				</Variable>
				<Variable>
					<Name>{perimeter}</Name>
					<ValueCalculation type="C#">return ({a}+{b})*2;</ValueCalculation>
				</Variable>
				<Variable>
					<Name>{area}</Name>
					<ValueCalculation type="C#">return ({a}*{b});</ValueCalculation>
				</Variable>
			</Variables>
			<VariableValidator type="C#">return ({a} > {b});</VariableValidator>
			<TextSnippets/>
			<Question>
				<LocalizedText>
					<Culture>hu-HU</Culture>
					<Text type="HTML">Számold ki az a={a} méter és b={b} méter oldalhosszúságú téglalap kerületét (K) és területét (T)!</Text>
				</LocalizedText>
			</Question>
			<Solution>
				<SolutionStep>
					<Presentation>
						<LocalizedText>
							<Culture>hu-HU</Culture>
							<Text type="HTML">K = {perimeter.ToString("0")} m és T = {area.ToString("0")} m</Text>
						</LocalizedText>
					</Presentation>
				</SolutionStep>
			</Solution>
		</ProblemTemplate>
